<Window x:Class="TravelingSalesmanGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TSP visualization" Height="350" Width="525">
    <Grid>
        <TabControl  HorizontalAlignment="Stretch" Name="visualizationControl" VerticalAlignment="Stretch">
            <TabItem Header="visualization" Name="visualization">
                <Grid>
                    <GridSplitter />
                    <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Right" Name="dataGrid1" VerticalAlignment="Stretch" Width="200" />
                </Grid>
            </TabItem>
            <TabItem Header="console" Name="console">
                <Grid>
                    <ScrollViewer HorizontalAlignment="Stretch" Name="outputConsole" VerticalAlignment="Stretch" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
